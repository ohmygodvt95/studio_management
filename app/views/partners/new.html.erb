<%= provide :title, "Add a new partner" %>

<h1 class="section-title">
  <span>New partner</span>
</h1>
<ol class="breadcrumb text-left">
  <li>
    <%= link_to "Partners Management", partners_path %>
  </li>
  <li class="active">New</li>
</ol>

<div class="container-fluid pmd-card partner-edit">
  <h1 class="text-center">Partner Information</h1>
  <hr>
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with model: @partner, url: partners_path, local: true do |f| %>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Name
              </label>
              <%= f.text_field :name, class: "form-control", required: true %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Email
              </label>
              <%= f.email_field :email, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Address
              </label>
              <%= f.text_area :address, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Description
              </label>
              <%= f.text_area :description, class: "form-control", required: true %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <hr>
            <div class="col-sm-6">
              <button type="submit" class="btn btn-success btn-block btn-lg pmd-ripple-effect">
                <i class="fa fa-save fa-fw"></i>
                Create
              </button>
              <br>
            </div>
            <div class="col-sm-6">
              <%= link_to partners_path, class: "btn btn-danger btn-block btn-lg pmd-ripple-effect" do %>
                <i class="fa fa-backward fa-fw"></i>
                Back
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
