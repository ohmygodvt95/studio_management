<% provide :title, "Authentication"  %>

<div class="login-card">
  <div class="container">
    <div class="row">
      <div class="col-sm-4 col-sm-offset-4  pmd-z-depth-1">
        <div class="panel panel-primary">
          <div class="panel-body">
            <h1 class="text-center text-uppercase">Login</h1>
            <hr>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :email, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">perm_identity</i>
                  </div>
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                </div>
              </div>

              <div class="form-group pmd-textfield pmd-textfield-floating-label">
                <%= f.label :password, class: "control-label pmd-input-group-label" %>
                <div class="input-group">
                  <div class="input-group-addon">
                    <i class="material-icons md-dark pmd-sm">lock_outline</i>
                  </div>
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                </div>
              </div>

              <div class="pmd-card-footer card-footer-no-border card-footer-p16 text-center row">
                <% if devise_mapping.rememberable? %>
                  <div class="form-group clearfix">
                    <div class="checkbox pull-left">
                      <label class="pmd-checkbox checkbox-pmd-ripple-effect">
                        <%= f.check_box :remember_me %>
                        <span class="pmd-checkbox"> Remember me</span>
                      </label>
                    </div>
                  </div>
                <% end %>
              </div>
              <hr>
              <div class="actions">
                <%= f.submit "Login", class: "btn pmd-ripple-effect btn-primary btn-block" %>
              </div>

            <% end %>
            <div class="text-center">
              <hr >
              <%= render "devise/shared/links" %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
