<%= provide :title, "Edit device: #{@device.name}" %>

<h1 class="section-title">
  <span>Device: <%= @device.name %></span>
</h1>
<ol class="breadcrumb text-left">
  <li>
    <%= link_to "Devices Management", devices_path %>
  </li>
  <li><%= link_to @device.name, @device %></li>
  <li class="active">Edit</li>
</ol>

<div class="container-fluid pmd-card partner-edit">
  <div class="row">
    <div class="col-sm-12">
      <%= link_to devices_path, class: "btn btn-primary pmd-rip pmd-ripple-effect pull-right" do %>
        <i class="fa fa-backward fa-fw"></i> Back
      <% end %>
    </div>
  </div>
  <h1 class="text-center">`<%= @device.name %>` Information</h1>
  <hr>
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_with model: @device, url: device_path(@device), method: :patch, local: true do |f| %>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Device Name
              </label>
              <%= f.text_field :name, class: "form-control" %>
            </div>
          </div>
        </div>
      </div>
      <div class="col-sm-12">
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Owner
              </label>
              <%= f.select :user_id, User.all.map{|u| [u.name, u.id]},{selected: @device.user_id},
               {class: "tags-form form-control pmd-select2-tags"} %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Price
              </label>
              <%= f.text_field :price, class: "form-control" %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <div class="form-group pmd-textfield">
              <label for="regular1" class="control-label">
                Image
              </label>
              <br>
              <%= f.file_field :avatar %>
              <hr>
              <img src="<%= @device.avatar.thumb.url %>" alt="<%= @device.name %>" class="img-responsive center-block pmd-z-depth">
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <hr>
            <div class="col-sm-6">
              <button type="submit" class="btn btn-success btn-block btn-lg pmd-ripple-effect">
                <i class="fa fa-save fa-fw"></i>
                Update
              </button>
              <br>
            </div>
            <div class="col-sm-6">
              <%= link_to devices_path, class: "btn btn-danger btn-block btn-lg pmd-ripple-effect" do %>
                <i class="fa fa-backward fa-fw"></i>
                Back
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
